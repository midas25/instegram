{
  "name": "your-project-name",
  "version": "1.0.0",
  "description": "A project for Vercel deployment with Express and MongoDB.",
  "scripts": {
    "dev": "vercel dev", 
    "build": "echo 'No build step needed'", 
    "start": "vercel dev" 
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^6.0.0",
    "body-parser": "^1.19.0",
    "vercel": "^24.0.0" 
  },
  "devDependencies": {},
  "engines": {
    "node": "14.x" 
  },
  "vercel": {
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }
}
